WindowManager:

    MainWindow:
    PvP:
    VsComputerOption:
    VsComputerHard:
    VsComputerEasy:



<Label>:
    font_name: "Montserrat"


<MainWindow>:
    name: "Main Window"

    FloatLayout:
        Label:
            pos_hint: {"center_x": .5, "center_y": .8}
            text: "Tic Tac Toe"
            size_hint: (.4, .1)
            font_size: 40
            size_hint_x: None

        Button:
            pos_hint: {"center_x": .5, "center_y": .6}
            text: "Player vs Player"
            size_hint: (.4, .1)
            font_size: 20
            on_release:
                app.root.current = "PvP"
                root.manager.transition.direction = "left"

        Button:
            pos_hint: {"center_x": .5, "center_y": .4}
            text: "Vs Computer"
            size_hint: (.4, .1)
            font_size: 20
            on_release:
                app.root.current = "VsComputerOption"
                root.manager.transition.direction = "left"


<Game>:
    name: "Game"

    FloatLayout:
        Label:
            pos_hint: {"center_x": .5, "center_y": .9}
            text: "Player vs Player"
            size_hint: (.4, .1)
            font_size: 20
            size_hint_x: None

        Label:
            pos_hint: {"center_x": .2, "center_y": .85}
            text: "Player 1 - " + str(root.player_1_current_figure)
            font_size: 15

        Label:
            pos_hint: {"center_x": .8, "center_y": .85}
            text: "Player 2 - " + str(root.player_2_current_figure)
            font_size: 15

        Label:
            id: score_1
            pos_hint: {"center_x": .2, "center_y": .8}
            text: str(root.score_1)
            font_size: 15

        Label:
            id: score_2
            pos_hint: {"center_x": .8, "center_y": .8}
            text: str(root.score_2)
            font_size: 15

        Label:
            id: winner
            pos_hint: {"center_x": .5, "center_y": .8}
            text: str(root.winner)
            font_size: 25
            color: 1/255, 150/255, 32/255, 1

        Button:
            pos_hint: {"center_x": .5, "center_y": .1}
            size_hint: (.2, .1)
            text: "Menu"
            on_release:
                app.root.current = "Main Window"
                root.manager.transition.direction = "right"

        GridLayout:
            id: game_board
            size_hint: (.55, .55)
            pos_hint: {"center_x": .5, "center_y": .47}
            cols: 3


<PvP>:
    name: "PvP"


<VsComputerOption>
    name: "VsComputerOption"

    FloatLayout:
        Label:
            pos_hint: {"center_x": .5, "center_y": .8}
            text: "Choose difficulty:"
            size_hint: (.4, .1)
            font_size: 20
            size_hint_x: None

        Button:
            pos_hint: {"center_x": .5, "center_y": .65}
            text: "Easy"
            size_hint: (.4, .1)
            font_size: 20
            on_release:
                app.root.current = "VsComputerEasy"
                root.manager.transition.direction = "left"

        Button:
            pos_hint: {"center_x": .5, "center_y": .5}
            text: "Hard"
            size_hint: (.4, .1)
            font_size: 20
            on_release:
                app.root.current = "VsComputerHard"
                root.manager.transition.direction = "left"

        Button:
            pos_hint: {"center_x": .5, "center_y": .1}
            size_hint: (.2, .1)
            text: "Menu"
            on_release:
                app.root.current = "Main Window"
                root.manager.transition.direction = "right"


<VsComputerEasy>
    name: "VsComputerEasy"


<VsComputerHard>
    name: "VsComputerHard"

